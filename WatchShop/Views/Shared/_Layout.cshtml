            </div>
            <div class="search">
                <input type="text" id="search-input" name="search-input" placeholder="Search">
                <button class="search-btn"><i class="fa fa-search"></i></button>
            </div>
            <div class="btns-customer">
                <ul class="btns">
                    @if (user == null)
                    {
                        <li class="user">
                            <a class="user-icon">
                                <i class="fa fa-user"></i>
                            </a>
                            <ul class="btns-customer-submenu">
                                <li><a href="~/User/Login">Login</a></li>
                                <li><a href="~/User/Register">Register</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="user">
                            <a class="user-avt" href="~/User">
                                <img src=@Url.Content("/Content/image/avatar/" +  user.Avatar) width=60px></img>
                            </a>
                            <ul class="btns-customer-submenu">
                                <li><a href="~/User">@user.FullName</a></li>
                                <li><a href="~/User/Logout">Log out</a></li>
                            </ul>
                        </li>
                    }
                    <li>
                        <a href="~/Cart" class="shop-cart">
                            @if (@count != 0){<span id="count-cart-item">@count</span>}
                            <i class="fa fa-shopping-cart"></i>
                        </a>
                    </li>
                </ul>
